!!!DOCTYPE
%html
  %head
    %title Dans
    = csrf_meta_tags
    %meta{name: "viewport", content: "width=device-width, initial-scale=1, shrink-to-fit=no"}

    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'

  %body
    #trumbowyg-icons= inline_svg Rails.root.join('node_modules','trumbowyg','dist','ui','icons.svg').to_s
    %nav.navbar.navbar-expand-lg.navbar-light.bg-light
      %button.navbar-toggler{type: "button", data: {toggle: "collapse", target: "#navbarNav"}, aria: {controls: "navbarNav", expanded: "false", label: "Toggle navigation"}}
        %span.navbar-toggler-icon

      .collapse.navbar-collapse#navbarNav
        %ul.navbar-nav
          %li.nav-item= link_to t('titles.home'), root_path, class: 'nav-link'
          %li.nav-item= link_to t('titles.options'), options_path, class: 'nav-link'
          %li.nav-item= link_to t('titles.people'), people_path, class: 'nav-link'
          %li.nav-item= link_to t('titles.klasses'), klasses_path, class: 'nav-link'
          %li.nav-item= link_to t('titles.packages'), '#', class: 'nav-link'
    .container-fluid
      = yield

  %footer
    .status
