<% if @tran.errors.any? %>
  alert('ocurri√≥ un error al editar el pago');
<% else %>
  (function(){
    let tr = byid('payment_<%= @tran.id -%>');
    tr.qs('.description').innerText = '<%= j(@tran.description) %>';
    tr.qs('.amount').innerText = '<%= j("$#{@tran.amount}") %>';
    tr.qs('.receipt').innerText = '<%= @tran.receipt %>';
    closeModal();
    <% if params[:button] == 'save_and_receipt' %>
      showReceiptModal(<%= @tran.receipt %>);
    <% end %>
  })()
<% end %>