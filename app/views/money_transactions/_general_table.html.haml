- hide_actions ||= false

%h3 Movimientos generales
%table.table.table-striped.table-sm
  %thead.thead-dark
    %tr
      %th= t('money.in')
      %th= t('money.out')
      %th= t('money.details')
      - unless hide_actions
        %th
  %tbody
    - transactions.each do |tran|
      %tr
        %td= tran.done ? '' : tran.amount
        %td= tran.done ? tran.amount : ''
        %td= tran.description
        - unless hide_actions
          %td= link_to 'X', tran, method: :delete, data: {confirm: 'Seguro?'}
  %tfoot
    %tr
      %td{colspan: (hide_actions ? 4 : 5)} #{t('money.in')}: $#{@totals[:general_in]}; #{t('money.out')}: $#{@totals[:general_out]}
