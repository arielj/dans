- page_title(t('rooms'))

%h1= t('rooms')

.filters

.scrollable_table
  %table.table.table-striped.table-sm
    %thead.thead-dark
      %tr
        %th= t('activerecord.attributes.room.name')
        %th.actions
    %tbody
      - @rooms.each do |room|
        %tr
          %td= room.name
          %td.actions
            = link_to edit_room_path(room) do
              %i.fa.fa-edit
            |
            = link_to room, method: :delete, data: {confirm: 'Â¿Re seguro?'} do
              %i.fa.fa-trash

.actions
  = link_to t('add.room'), new_room_path, class: 'btn btn-primary'
