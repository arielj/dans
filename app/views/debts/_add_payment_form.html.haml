= form_for MoneyTransaction.new, url: add_payment_debt_path(@debt), as: 'payment', id: 'add_debt_payment', remote: true do |f|
  .form-group
    = f.label :created_at
    = f.text_field :created_at, placeholder: 'aaaa-mm-dd', class: 'form-control datepicker', value: Date.today
  .form-group
    = f.label :description
    = f.text_field :description, class: 'form-control'
  .form-group
    = f.label :amount
    .input-group
      .input-group-prepend
        .input-group-text $
      = f.text_field :amount, value: @debt.to_pay, class: 'form-control payment_amount', data: {amount: @debt.to_pay.to_f}
  .modal-footer
    = f.submit t('save.payment'), class: 'btn btn-primary'
