= form_for MoneyTransaction.new, url: add_payment_debt_path(@debt), as: 'payment', id: 'add_debt_payment', remote: true do |f|
  .form-group
    = f.label :created_at, class: 'form-label'
    = f.text_field :created_at, placeholder: 'aaaa-mm-dd', class: 'form-input datepicker', value: Date.today
  .form-group
    = f.label :description, class: 'form-label'
    = f.text_field :description, class: 'form-input'
  .form-group
    = f.label :amount, class: 'form-label'
    .input-group
      .input-group
        %span.input-group-addon $
      = f.text_field :amount, value: @debt.to_pay, class: 'form-input payment_amount', data: {amount: @debt.to_pay.to_f}
  .modal-footer
    = f.submit t('save.payment'), class: 'btn btn-primary'
