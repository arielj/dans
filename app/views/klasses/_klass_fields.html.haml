.klass_fields
  .form-group
    = f.label :name, class: 'form-label'
    = f.text_field :name, class: 'form-input'
  .form-group
    = f.label :fixed_fee, class: 'form-label'
    .input-group
      %span.input-group-addon $
      = f.text_field :fixed_fee, class: 'form-input'
  .form-group
    = f.label :status, class: 'form-label'
    = f.select :status, options_for_select(Klass.statuses_for_select, f.object.status), {}, class: 'form-select'
  -# .form-group
  -#   = f.label :info
  -#   = f.text_area :info, class: 'form-control'

.klass_schedules
  = f.fields_for :schedules do |schedule|
    %h3
      = t('schedules')
      = link_to_add_association t('add.schedule'), f, :schedules, {class: 'btn', data: {'association-insertion-node' => '.klass_schedules #schedules', 'association-insertion-method' => 'append'}}
    #schedules
      = render 'schedule_fields', f: schedule
