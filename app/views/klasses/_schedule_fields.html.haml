.nested-fields.form-row
  .form-group.col
    = link_to_remove_association "X", f
    = f.label :from_time
    = f.text_field :from_time, class: 'form-control'
  .form-group.col
    = f.label :to_time
    = f.text_field :to_time, class: 'form-control'
  .form-group.col
    = f.label :day
    = f.select :day, options_for_select(Schedule.days_for_select), {}, class: 'form-control'
  .form-group.col
    = f.label :room
    = f.text_field :room, class: 'form-control'
