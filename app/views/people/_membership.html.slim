table.table.table-striped.table-small
  tr
    th= Installment.human_attribute_name(:year)
    th= Installment.human_attribute_name(:month)
    th= Installment.human_attribute_name(:amount)
    th= Installment.human_attribute_name(:status)
    th= Installment.human_attribute_name(:payments)
    th
  - membership.installments.includes(:payments).order(year: :asc, month: :asc).each do |ins|
    tr.installment id="installment_#{ins.id}"
      td= ins.year
      td= ins.month_name
      td= installment_amount(ins)
      td.payments= t("payment_status.#{ins.status}")
      td
        = payments_detail(ins)
        - if ins.to_pay > 0
          = link_to new_payment_installment_path(ins), remote: true, title: t('add.payment') do
            i.fa.fa-plus
      td
        = link_to ins, method: :delete, data: { confirm: 'Â¿Eliminar cuota?' }, title: 'Eliminar cuota' do
          i.fa.fa-trash
  