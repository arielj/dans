= form_for @trans, url: @form_url do |f|
  .form-group
    = f.label :amount, class: 'form-label'
    .input-group
      %span.input-group-addon $
      = f.text_field :amount, class: 'form-input'
  .form-group
    = f.label :description, class: 'form-label'
    = f.text_field :description, class: 'form-input'
  .actions.modal-footer
    = f.submit t('save.money_transaction'), class: 'btn btn-primary'
