= form_for @trans, url: @form_url do |f|
  .form-group
    = f.label :amount
    .input-group
      .input-group-prepend
        .input-group-text $
      = f.text_field :amount, class: 'form-control'
  .form-group
    = f.label :description
    = f.text_field :description, class: 'form-control'
  .actions.modal-footer
    = f.submit t('save.money_transaction'), class: 'btn btn-primary'
