      - f.object.family_members.each do |u|
        %li
          = link_to u.to_label, edit_person_path(u)
          (#{link_to('X', remove_family_member_person_path(f.object, {family_member_id: u.id}), method: :put, data: {confirm: 'Â¿Seguro?'})})
      %li= link_to 'Agregar miembro', add_family_member_person_path(f.object), remote: true
