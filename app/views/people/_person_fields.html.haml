.form-row
  .form-group.col
    = f.label :birthday
    = f.text_field :birthday, placeholder: 'aaaa-mm-dd', class: 'form-control datepicker'
  .form-group.col
    = f.label :age
    = f.text_field :age, class: 'form-control'
.form-row
  .form-group.col
    = f.label :dni
    = f.text_field :dni, class: 'form-control'
  .form-check.col
    = f.label :gender, class: 'form-label'
    = f.select :gender, options_for_select(Person.genders_for_select), {}, class: 'form-control'
.form-row
  .form-group.col
    = f.label :cellphone
    = f.text_field :cellphone, class: 'form-control'
  .form-group.col
    = f.label :alt_phone
    = f.text_field :alt_phone, class: 'form-control'
.form-row
  .form-group.col
    = f.label :address
    = f.text_field :address, class: 'form-control'
  .form-group.col
    = f.label :email
    = f.text_field :email, class: 'form-control'
.form-group
  = f.label :group
  = f.text_field :group, class: 'form-control'
.form-row
  - unless f.object.new_record?
    .form-group.col
      = f.label :family
      %ul
        - f.object.family_members.each do |u|
          %li
            = link_to u.to_label, edit_person_path(u)
            (#{link_to('X', remove_family_member_person_path(f.object, {family_member_id: u.id}), method: :put, data: {confirm: 'Â¿Seguro?'})})
        %li= link_to 'Agregar miembro', add_family_member_person_path(f.object), remote: true
  .form-group.col
    = f.label :comments
    = f.text_area :comments, class: 'form-control'
