%h1= t('titles.people')

%h3 Filtrar
= form_tag '', method: :get do
  Mostrar:
  = select_tag :type, options_for_select([['Todos',''],['Profes','teachers'],['Almuno/as','students']], params[:type])
  %br
  = submit_tag 'Filtrar'

%table
  %thead
    %tr
      %th= t('form.header.people.name')
      %th= t('form.header.people.lastname')
      %th= t('form.header.people.actions')
  %tbody
    - @people.each do |person|
      %tr
        %td= person.name
        %td= person.lastname
        %td= link_to t('form.action.people.edit'), edit_person_path(person)

= link_to t('form.action.people.add_teacher'), new_teacher_person_path
= link_to t('form.action.people.add_student'), new_student_person_path
