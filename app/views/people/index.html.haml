%h1= t('titles.people')

%h3 Filtrar
= form_tag '', method: :get do
  = select_tag :type, options_for_select([['Profes','teachers'],['Almuno/as','students']], params[:type]), prompt: 'Mostar todos'
  = text_field_tag :q, params[:q], placeholder: 'Buscar (nombre, apellido, dni)'
  = submit_tag 'Filtrar', class: 'btn btn-primary'

%table.table
  %thead
    %tr
      %th= t('form.header.people.name')
      %th= t('form.header.people.lastname')
      %th= t('form.header.people.actions')
  %tbody
    - @people.each do |person|
      %tr
        %td= person.name
        %td= person.lastname
        %td= link_to t('form.action.people.edit'), edit_person_path(person)

= link_to t('form.action.people.add_teacher'), new_teacher_person_path
= link_to t('form.action.people.add_student'), new_student_person_path
